<h1><%= @product.title %></h1>
<%= image_tag @product.image.url(:large) if @product.image.present? %>
<p><%= @product.description %></p>
<p><%= @product.price %></p>
<p><%= @product.user.first_name %></p>
<p>Tags: <%= @product.tags.pluck(:name).join(', ') %>

<% if can? :edit, @product %>
<%= link_to 'Edit', edit_product_path(@product) %>
<% end %>
<% if can? :destroy, @product %>
<%= link_to 'Delete', product_path(@product),
                      method: :delete,
                      data:{confirm: 'Are you sure?'} %>
                      <% end %>


        <h2>Reviews</h2>
        <div id="review-form">
          <%= render "/reviews/form" %>
      </div>
      <hr>
      <h1>Reviews</h1>

      <% @product.reviews.each do |r| %>
       <%= render "/reviews/review", review: r %>
    <% end %>
