<%= simple_form_for @product do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.association :tags, input_html: { class: 'chosen-select' } %>
  <%= f.input :category, collection: @categories %>
  <%= f.input :image %>
  <%= f.input :file %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
